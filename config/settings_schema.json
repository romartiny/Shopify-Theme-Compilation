  {
    "name": "Skip to Checkout",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_skip_to_checkout",
        "label": "Enable skip to checkout",
        "info": "Note: this will bypass the add to cart feature on product pages. Instead, it will skip straight to check out."
      },
      {
        "type": "text",
        "id": "skip_cart_submit",
        "label": "Skip to checkout button text",

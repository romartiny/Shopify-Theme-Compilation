  {
    "name": "Cart Promotions",
    "settings": [
      {
				"type": "header",
				"content": "Cart discounts"
			},
      {
				"type": "checkbox",
				"id": "enable_cart_discounts",
				"label": "Show cart discount code field",
        "default": true
			},
      {
				"type": "header",
				"content": "Cart progress bar"
			},
			{
				"type": "paragraph",
				"content": "Use the cart progress bar for shipping or other cart promotions. The progress bar will show a success message once the cart subtotal reaches the set goal."
			},
			{
				"type": "checkbox",
				"id": "enable_cart_progress_bar",
				"label": "Show cart progress bar"
			},
			{
				"type": "text",
				"id": "cart_progress_threshold",
				"label": "Progress bar goal",
				"info": "This should be the required cart sub-total for the promotion.",
				"default": "50"
			},
			{
				"type": "text",
				"id": "cart_progress_message",
				"label": "Progress bar message",
				"default": "Spend [amount] more to get FREE shipping.",
        "info": "Use '[amount]' to signify the amount needed to reach the goal."
			},
			{
				"type": "text",
				"id": "cart_progress_success_message",
				"label": "Progress bar success message",
				"default": "Congrats! You get FREE shipping!"
			},
      {
				"type": "header",
				"content": "Cart Upsell"
			},
			{
				"type": "paragraph",
				"content": "Use the cart upsell to offer another product to your customer while in cart, usually at a discounted price."
			},
      {
        "type": "checkbox",
        "id": "enable_cart_upsell",
        "label": "Enable Cart Upsell"
      },
      {
        "type": "product",
        "id": "cart_upsell_product",
        "label": "Cart Upsell Product",
        "info": "Upsell product will not show if it is already in cart."
      },
      {
        "type": "text",
        "id": "cart_upsell_message",
        "label": "Cart Upsell Message"
      }

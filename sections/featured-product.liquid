           <span id="salePrice" class="salePriceproduct-{{ section.id }} moneysale-tag sale-tag large"> 
           {% assign sale = current_variant.compare_at_price | minus: current_variant.price |  money %}
            {{ 'products.product.on_save' | t }}  {{sale}}                      
            </span> 
      
        {% endif %}
        
          {% endif %}
            
            </span>
            {% else %}
              <span class="visually-hidden">{{ 'products.product.regular_price' | t }}</span>
              <s id="ComparePrice-{{ section.id }}" class="hide">{{ current_variant.compare_at_price | money }}</s>
              <span class="product-price__price product-price__price-{{ section.id }}">
                <span id="ProductPrice-{{ section.id }}"
                  itemprop="price" content="{{ current_variant.price | divided_by: 100.00 }}">
                  {{ current_variant.price | money }}
                </span>
                <span class="product-price__sale-label product-price__sale-label-{{ section.id }} hide">{{ 'products.product.on_sale' | t }}</span>
              </span>
            {% endif %}
          </p>


          <form action="/cart/add" method="post" enctype="multipart/form-data" class="product-form product-form-{{ section.id }}{% unless section.settings.show_variant_labels %} for_feature_product product-form--hide-variant-labels1{% endunless %}" data-section="{{ section.id }}">
            {% unless section_onboarding %}
              {% unless product1.options.size == 1 and product.variants[0].title == 'Default Title' %}
                {% for option in product1.options_with_values %}
                  <div class="selector-wrapper js product-form__item">
                    <label {% if option.name == 'default' %}class="label--hidden" {% endif %}for="SingleOptionSelector-{{ section.id }}-{{ forloop.index0 }}">
                      {{ option.name }}
                    </label>
                    <select class="single-option-selector single-option-selector-{{ section.id }} product-form__input" id="SingleOptionSelector-{{ section.id }}-{{ forloop.index0 }}" data-index="option{{ forloop.index }}">
                      {% for value in option.values %}
                        <option value="{{ value | escape }}"{% if option.selected_value == value %} selected="selected"{% endif %}>{{ value }}</option>
                      {% endfor %}
                    </select>
                  </div>
                {% endfor %}
              {% endunless %}

              <select name="id" id="ProductSelect-{{ section.id }}" data-section="{{ section.id }}" class="product-form__variants no-js">
                {% for variant in product1.variants %}
                  {% if variant.available %}
                    <option {% if variant == product1.selected_or_first_available_variant %} selected="selected" {% endif %} value="{{ variant.id }}">
                      {{ variant.title }}
                    </option>
                  {% else %}
                    <option disabled="disabled">{{ variant.title }} - {{ 'products.product.sold_out' | t }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            {% endunless %}
            {% if section.settings.show_quantity_selector %}
              <div class="product-form__item product-form__item--quantity">
                <label for="Quantity-{{ section.id }}">{{ 'products.product.quantity' | t }}</label>
                <input type="number" id="Quantity-{{ section.id }}" name="quantity" value="1" min="1" class="product-form__input" pattern="[0-9]*">
              </div>
            {% endif %}
            {% comment %}
            <div class="product-form__item product-form__item--submit">
              {% assign price_var=current_variant.price | withoutmoney %}  
          
              
               {% if price_var == 0 %}    
              
               <button type="submit" name="add" id="AddToCartZero-{{ section.id }}" {% unless current_variant.available %}disabled="disabled"{% endunless %} class="btn product-form__cart-submit{% if product1.options.size == 1 and product1.variants[0].title == 'Default Title' %} product-form__cart-submit--small{% endif %}">
                <span id="AddToCartText-{{ section.id }}">
                  {% unless current_variant.available %}
                    {{ 'products.product.sold_out' | t }}
                  {% else %}
                {{ section.settings.add_to_cart_button_text_zero_price }} 
                  {% endunless %}
                </span>
              </button>
              
              
               {% else %}
              
               <button type="submit" name="add" id="AddToCart-{{ section.id }}" {% unless current_variant.available %}disabled="disabled"{% endunless %} class="btn product-form__cart-submit{% if product1.options.size == 1 and product1.variants[0].title == 'Default Title' %} product-form__cart-submit--small{% endif %}">
                <span id="AddToCartText-{{ section.id }}">
                  {% unless current_variant.available %}
                    {{ 'products.product.sold_out' | t }}
                  {% else %}
               {{ section.settings.add_to_cart_button_text }}
                  {% endunless %}
                </span>
              </button>
              
               {% endif %}
              
            </div>
          
              {% endcomment %} 
            
             {% assign price_var=current_variant.price | withoutmoney %}  
          
           {% include 'timer_setting_home' %}
           {% comment %}  {% endcomment %}
          </form>

        </div>
          {% if section.settings.product_description %}
      
        <div class="product-single__description rte" itemprop="description">
          {% unless product1 == empty %}
            {{ product1.description }}
          {% else %}
            {{ 'homepage.onboarding.product_description' | t }}
          {% endunless %}
        </div>
         {% else %}
        <div class="product-single__description rte" itemprop="description"></div>
        {% endif %}
         
        
        {% if section.settings.show_share_buttons %}
          {% include 'social-sharing', share_title: product.title, share_permalink: product.url, share_image: product %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% unless product1 == empty %}

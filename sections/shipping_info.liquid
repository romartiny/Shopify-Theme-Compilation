<style>
  
 #shopify-section-{{section.id}} .block-heading{
    font-size: {{section.settings.heading_font_size}}px !important;
    font-family: {{section.settings.heading_font_style}} !important;
}
  
#shopify-section-{{section.id}} .block-caption{
    font-size: {{section.settings.text_font_size}}px !important;
    font-family: {{section.settings.text_font_style}} !important;
}  
  
  
</style>
<div id="shopify-section-[id]" class="shopify-section sale_button shipping_info_page">
  <div class="container wrapper">
  
  
  <div class="row" id="bottom_blocks">
 
  <div class="grid__item medium-up--one-half">
    <div data-delay="300" data-animate="fadeInLeft " class="bottom-block fadeInLeft animated">
      <div class="block-logo">
        {% if section.settings.footer_above_logo1 %}
           <img alt="" src="{{ section.settings.footer_above_logo1 | img_url: '120x120'}}" class="swing">       
        {% else %}
           <img alt="" src=" {{ "footer_above_logo.png" |asset_url}}" class="swing">
        {% endif %}
        
      </div>
      
      <div class="block-content">
        <div class="block-heading">{{ section.settings.footer_above_header1 }}</div>
        <p class="block-caption">{{ section.settings.footer_above_text1 }}</p>
      </div>
    </div>
  </div>
  
  
    
  <div class="grid__item medium-up--one-half left_img">
    <div data-delay="300" data-animate="fadeInRight " class="bottom-block fadeInRight animated">
      
      <div class="block-logo">
        
        
          {% if section.settings.footer_above_logo2 %}
           <img alt="" src="{{ section.settings.footer_above_logo2 | img_url: '120x120'}}" class="swing">       

<style>
  .hero__overlay::before {
    opacity: 0;
}
   #shopify-section-{{section.id}}  .hero .rte-setting p{
    color:{{section.settings.color_text}};
    font-family:{{section.settings.text_font_family}} !important;
  }
  #shopify-section-{{section.id}}  .hero__inner .h1{
    color:{{section.settings.color_title}};
    font-family:{{section.settings.title_font_family}} !important;
  }
 #shopify-section-{{section.id}} .hero__btn{
  color:{{section.settings.button_text}};
  background-color:{{section.settings.button_background_color}};
}
 #shopify-section-{{section.id}} .hero__btn:hover{
  color:{{section.settings.button_text}} !important;
  background-color:{{section.settings.button_background_color}} !important;
}

</style>
<div id="shopify-section-[id]" class="mycustomerhero hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %}"{% if section.settings.image %} style="background-image: url('{{ section.settings.image | img_url: '2048x' }}'); background-position: center {{ section.settings.alignment }};"{% endif %}>


  {% if section.settings.image == blank %}
    <div class="placeholder-background">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {% endif %}
  <div class="hero__inner">
    <div class="page-width text-center">
      {% if section.settings.title != blank %}
        <h2 class="h1 mega-title{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">{{ section.settings.title | escape }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="rte-setting mega-subtitle{% if section.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">{{ section.settings.text }}</div>
      {% endif %}
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="btn hero__btn   {% if section.settings.button_size == 'medium' %} midim-lrg-btn {% endif %}  {% if section.settings.button_size == 'large' %} extr-lrg-btn {% endif %} {% if section.settings.button_size == 'small' %} smal-lrg-btn {% endif %}">
          {{ section.settings.button_label | escape }}
        </a>
      {% endif %}
    </div>
  </div>
</div>


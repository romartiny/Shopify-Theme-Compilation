{% if section.settings.show_page_title or section.settings.show_page_content %}
  <div class="page-width page-template-container">
    
    {% if section.settings.show_page_title %}
      <h1>{{ page.title }}</h1>
    {% endif %}


    {% if section.settings.show_page_content %}
      <div class="rte">
        {{ page.content }}
      </div>
    {% endif %}
  </div>
{% endif %}

{% schema %}
  {
    "name": "Page Content",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_page_title",
        "label": "Show Page Title",
        "info": "Page title can be edited by visiting the page within the Shopify admin.",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_page_content",
        "label": "Show Page Content",
        "info": "Page content can be edited by visiting the page within the Shopify admin.",
        "default": true
      }
    ]
  }
{% endschema %}
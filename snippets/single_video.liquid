<section class="video-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-12">
        <div class="section-heading text-center">
          {% if block.settings.title != blank %}<h3>{{ block.settings.title }}</h3>{% endif %}
          {% if block.settings.subtitle != blank %}<h2 class="mt-2">{{ block.settings.subtitle }}</h2>{% endif %}
        </div>
        <div class="video-block wow zoomIn" data-wow-duration="2s">
          {% if block.settings.video_image != blank %}
          <div class="video-poster" style="background: url({{ block.settings.video_image | img_url: '1200x' }});"></div>
          {% endif %}
          <div class="vd-overlay" data-toggle="modal" data-target="#ytvideo">
            {% if block.settings.watchtitle != blank %}<p><i class="fa fa-play" aria-hidden="true"></i> {{ block.settings.watchtitle }} </p>{% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Youtube Vide Modal -->
{% if block.settings.video_link != blank %}
<div class="modal fade" id="ytvideo" tabindex="-1" role="dialog" aria-labelledby="ytvideo" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        {% if block.settings.watchtitle != blank %}<h5 class="modal-title" id="ytvideo2">{{ block.settings.watchtitle }}</h5>{% endif %}
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
            <iframe height="400" src="{{ block.settings.video_link }}" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen style="max-width: 100%;"></iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
<div class="mt-4 sf-prod__layout-3">
    <div class="flex flex-wrap sf-prod__container sf-prod__block">
        <div class="w-full md:w-7/12 flex-1">
            <div class="sf-prod-media__wrapper">
                <div class="sf-product-media__desktop pt-6 hidden md:block">
                  <div class="grid gap-2.5 {% if product.media.size > 1 %}grid-cols-2{% endif %}">
                    {% for media in product.media %}
                      <div class="sf-prod-media-item media-type-{{ media.media_type }} overflow-hidden relative" data-index={{ forloop.index0 }}>
                        {% render 'media', media: media, aspect_ratio: media.aspect_ratio %}
                        {% render 'product-zoom-button' %}
                      </div>
                    {% endfor %}
                  </div>
                </div>
                <div class="sf-product-media__mobile md:hidden">
                  {% render 'product-page-mobile-media' %}
                </div>
            </div>
        </div>
        <div class="w-full md:w-5/12 sf-prod__summary">
            {% render 'product-page__info' %}
        </div>
    </div>
</div>

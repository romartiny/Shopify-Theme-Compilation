.comment-form textarea {
  display: block;
  padding: pxToRem(10);
  font-size: pxToRem(20);
  width: 100%;
  color: $color-body-text;
  margin-bottom: pxToRem(10);
}

.comment-form input[type="text"],
.comment-form input[type="email"] {
  max-width: pxToRem(300);
}

.comments {
  padding-bottom: pxToRem(20);
}

.comments ul {
  margin: 0;
  padding: 0;
}

.comments ul li {
  padding: pxToRem(25) pxToRem(20);
  border-radius: pxToRem(3);
  background-color: $color-body-secondary;
  margin-bottom: pxToRem(25);
}

.comments .form-success {
  padding-left: 0;
}

.comments ul li > p {
  margin-bottom: 0;
  font-size: pxToRem(14);
  opacity: 0.7;
}

.comments ul li .rte {
  font-size: pxToRem(24);
  line-height: 1.4;
}

.comments ul li .rte p {
  margin-top: 0;
}
.pop-up-trigger {
  position: fixed;
  display: none;
  bottom: pxToRem(20);
  height: pxToRem(50);
  z-index: 99997;
}

.pop-up-trigger.active {
  display: flex;
}

.pop-up-trigger button {
  border: none;
}

.pop-up-trigger button:focus {
  outline: none;
}

.pop-up-trigger .pop-up-trigger__trigger {
  height: 100%;
  padding: 0 pxToRem(10) 0 pxToRem(15);
  background-color: #000;
  color: #fff;
  text-transform: uppercase;
  font-size: pxToRem(18);
  font-weight: 800;
}

.pop-up-trigger__close {
  color: #fff;
  background-color: #000;
  align-items: center;
  justify-content: center;
  display: flex;
  padding: pxToRem(8) pxToRem(15) pxToRem(8) pxToRem(8);
}

.pop-up-float {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #000;
  padding: pxToRem(35) 0;
  -webkit-box-shadow: 0px 0px 65px -20px rgba(99,99,99,1);
  -moz-box-shadow: 0px 0px 65px -20px rgba(99,99,99,1);
  box-shadow: 0px 0px 65px -20px rgba(99,99,99,1);
  z-index: 9999999;
  display: none;
  
  @include media-query($medium-up) {
    padding: pxToRem(35);
  }
}

.pop-up-float.active {
  display: block;
}

.pop-up-float .page-width {
  @include media-query($medium-up) {
    display: flex;
  }
}

.pop-up-float__text {
  width: 100%;
  color: #fff;
  text-align: center;
  margin-bottom: pxToRem(15);
  
  @include media-query($medium-up) {
    width: 60%;
    margin: 0;
  }
}

.pop-up-float .newsletter--form {
  display: flex;
  align-items: center;
  
  @include media-query($medium-up) {
    width: 40%;
  }
}

.pop-up-float .newsletter--form input[type="email"],
.pop-up-float .newsletter--form input[type="text"] {
  border-top-left-radius: pxToRem(3);
  border-bottom-left-radius: pxToRem(3);
}


.pop-up-float__text--full-width {
  width: 100%;
  
  @include media-query($medium-up) {
    width: 100%;
  }
}

.pop-up-float__text__success {
  width: 100%;
  color: #fff;
  text-align: center;
  margin-bottom: pxToRem(15);
}

.pop-up-float__text h4 {
  margin: 0 0 pxToRem(5) 0;
  font-size: pxToRem(25);
}

.pop-up-float__text p {
  margin-bottom: 0;
}

.pop-up-float__opt-in {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pop-up-float__opt-in .input-group {
  width: 100%;
  margin: 0 auto;
  
  @include media-query($medium-up) {
    margin: 0;
  }
}

.pop-up-float__opt-in form {
  width: 100%;
  
  @include media-query($medium-up) {
    display: flex;
  }
}

.pop-up-float__close {
  font-size: pxToRem(30);
  color: #fff;
  position: absolute;
  top: pxToRem(15);
  right: pxToRem(15);
  background: none;
  border: none;
}

.pop-up-modal {
  position: fixed;
  z-index: 9999999999;
  top: pxToRem(-9999);
  left: pxToRem(-9999);
  width: 100%;
  height: 0;
  align-items: center;
  justify-content: center;
  display: flex;
  opacity: 0;
  transition: opacity 0.4s;
}

.pop-up-modal.active {
  height: 100%;
  opacity: 1;
  top: 0;
  left: 0;
}

.pop-up-modal__overlay {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0,0,0,0.3);
  width: 100%;
  height: 100%;
  z-index: 1;
}

.pop-up-modal__content {
  max-width: pxToRem(550);
  width: 100%;
  margin: 25px;
  padding: pxToRem(30) pxToRem(20);
  position: relative;
  text-align: center;
  z-index: 2;
  border-radius: pxToRem(3);
  
  @include media-query($medium-up) {
    padding: pxToRem(50);
  }
}

.pop-up-modal__content img {
  display: block;
  margin: 0 auto pxToRem(20);
  width: 100%;
}

.pop-up-modal__content h2 {
  font-size: pxToRem(30);
  margin: 0;
  
  @include media-query($medium-up) {
    font-size: pxToRem(40);
  }
}

.pop-up-modal__close {
  position: absolute;
  top: pxToRem(5);
  right: pxToRem(5);
  background: none;
  border: none;
  font-size: pxToRem(18);
  
  @include media-query($medium-up) {
    font-size: pxToRem(23);
    top: pxToRem(15);
    right: pxToRem(15);
  }
}

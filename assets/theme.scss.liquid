    border: none;
    transform: none;
    margin: 0 auto;
  }
  
  .mini-cart.is-visilbe {
    transform: translateX(0);
  }
  
  .mini-cart__header {
    padding: pxToRem(18) pxToRem(24);
    align-items: center;
    position: relative;
  }
  

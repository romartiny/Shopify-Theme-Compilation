  font-size: pxToRem(18);
}

.cart__item__price {
  font-size: pxToRem(16);
  margin: 0 0 0 pxToRem(12);
  color: $color-cart-text;
  
  @include media-query($medium-up) {
    font-size: pxToRem(20);
    margin: 0;
  }
}

.cart__item__price s {
  color: $color-compare-price;
}

.cart__item__discount {
  color: $color-cart-text;
}

@include media-query($medium-up) {
  .cart__item__title {
    font-size: pxToRem(24);
  }
}

.cart__item .product__quantity {
  padding: pxToRem(5) pxToRem(30);
  border: none;
  background: transparent;
  color: $color-cart-text;
}

.mini-cart {
  position: fixed;
  left: pxToRem(12);
  right: pxToRem(12);
  bottom: pxToRem(12);
  z-index: 99999;
  background: $color-cart-bg;
  box-shadow: 0 0 6rem rgba(0, 0, 0, 0.1);
  transform: translateY(110%);
  visibility: hidden;
  transition: 0.5s cubic-bezier(0.35, 0.45, 0.06, 1.02);
  overflow: scroll;
  display: flex;
  flex-direction: column;
  max-height: 80vh;
  
  @include media-query($medium-up) {
    display: block;
    max-height: none;
  }
}

.mini-cart--cart-page {
  position: static;
  visibility: visible;
  margin: 0 auto;
  transform: none;
}

.mini-cart--cart-page .mini-cart__header {
  display: none;
}

.mini-cart__backdrop {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: rgba(43, 41, 37, 0.6);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: 0.4s ease 0s;
}

.mini-cart.is-visible {
  visibility: visible;
  transform: translateY(0%);

  .mini-cart__checkout {
    span {
      transform: translateY(0);
      opacity: 1;
    }
  }
}

.mini-cart.is-visible + .mini-cart__backdrop {
  opacity: 1;
  visibility: visible;
  pointer-events: unset;
  transition: 0.4s ease 0.2s;
}

.mini-cart__header {
  display: flex;
  justify-content: space-between;
}

.mini-cart__header__title {
  margin: 0 auto 0 0;
  font-family: $font-stack-header;
  text-transform: $header-text-transform;
  color: $color-cart-text;
}

.mini-cart__subtotal {
  display: flex;
  justify-content: space-between;
  padding: pxToRem(18) pxToRem(16);
  p {
    margin: 0;
  }
}

.mini-cart__close {
  transform: scale(1.5);
  cursor: pointer;
  color: $color-cart-text;
}

.mini-cart__actions {
  @include media-query($medium-up) {
    padding: pxToRem(20);
  }
}

.mini-cart__checkout,
.mini-cart__checkout:visited {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  margin: 0;
  font-family: $font-stack-header;
  text-transform: uppercase;
  font-size: pxToRem(18);
  background: $color-cart-buttons;
  color: $color-cart-buttons-text;
  padding: pxToRem(20);
  transition: opacity 0.3s;
  border-top-right-radius: 0;
  border-top-left-radius: 0;
  border-bottom-right-radius: pxToRem(3);
  border-bottom-left-radius: pxToRem(3);

  span {
    display: block;
    transform: translateY(110%);
    opacity: 0;
    color: $color-cart-buttons-text;
    transition: 0.5s cubic-bezier(0.35, 0.45, 0.06, 1.02) 0.35s;
  }

  &.is-processing {
    opacity: 0.5;
  }
  
  @include media-query($medium-up) {
    border-radius: pxToRem(3);
  }
}

.mini-cart__checkout > span {
  margin-right: pxToRem(5);
}

.mini-cart--cart-page .mini-cart__checkout span {
  transform: none;
  opacity: 1;
}

.cart-note {
  display: flex;
  justify-content: space-between;
  padding: 1rem 0;
  align-items: center;
  margin: 0 1.5rem;
  border-top: 1px solid #ccc;
  display: none;
  &.is-visible {
    display: flex;
  }
}

@include media-query($medium-down) {
  .mini-cart__header {
    padding: pxToRem(16);
  }

  .mini-cart__close {
    transform: scale(1.5);
    cursor: pointer;
  }
}

@include media-query($medium-up) {
  .mini-cart {
    overflow: hidden;
    top: 0;
    left: auto;
    right: 0;
    bottom: 0;
    width: pxToRem(540);
    z-index: 99999;
    background: $color-cart-bg;
    border: none;
    border-left: 1px solid #000;
    transform: translateX(105%);
    display: flex;
    display: -webkitflex;
    flex-direction: column;
    -webkit-flex-direction: column;
    justify-content: space-between;
